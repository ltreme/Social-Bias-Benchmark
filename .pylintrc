[MASTER]
ignore=venv,.venv,__pycache__,build,dist,notebooks
init-hook='import sys, os; sys.path[:0]=[os.path.abspath("apps/shared/src"), os.path.abspath("apps/benchmark/src"), os.path.abspath("apps/persona_generator/src"), os.path.abspath("apps/analysis/src")]'

[FORMAT]
max-line-length=120

[MESSAGES CONTROL]
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R0917,  # too-many-positional-arguments
    R0903,  # too-few-public-methods
    C0301,  # line-too-long
    W0221,  # arguments-differ
